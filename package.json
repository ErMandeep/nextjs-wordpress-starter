{
  "name": "root",
  "private": true,
  "workspaces": [
    "docs",
    "frontend"
  ],
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "scripts": {
    "build": "npm run build --workspace=@webdevstudios/nextjs-wordpress-starter",
    "build:docs": "npm run publish --workspace=@webdevstudios/docs",
    "clean": "npm run clean --workspace=@webdevstudios/nextjs-wordpress-starter",
    "dev": "npm run dev --workspace=@webdevstudios/nextjs-wordpress-starter",
    "dev:docs": "npm run dev --workspace=@webdevstudios/docs",
    "format": "npm run format --workspace=@webdevstudios/nextjs-wordpress-starter",
    "lint": "npm run lint --workspace=@webdevstudios/nextjs-wordpress-starter --workspace=@webdevstudios/docs",
    "lint:docs": "npm run lint --workspace=@webdevstudios/docs",
    "start": "npm run start --workspace=@webdevstudios/nextjs-wordpress-starter",
    "storybook": "npm run storybook --workspace=@webdevstudios/nextjs-wordpress-starter",
    "test": "npm run test --workspace=@webdevstudios/nextjs-wordpress-starter"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.6",
    "markdownlint": "^0.24.0",
    "markdownlint-cli": "^0.28.1",
    "prettier": "^2.4.0"
  }
}
